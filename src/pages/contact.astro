---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="ติดต่อเรา - DOT Marketing | ปรึกษาฟรี Sales Page & SEO" 
  description="ติดต่อทีม DOT Marketing เพื่อปรึกษาฟรีด้าน Sales Page Design, SEO, Digital Marketing รับใบเสนอราคาวันนี้"
  keywords="ติดต่อ Digital Marketing, ปรึกษา Sales Page ฟรี, ราคา SEO Thailand, จ้าง SEO ราคาไม่แพง"
  canonical="https://dotmarketing.co.th/contact"
  ogImage="https://dotmarketing.co.th/og-contact.jpg"
>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="bg-white py-32 relative overflow-hidden">
    <!-- Background Dots -->
    <div class="absolute top-0 left-0 w-full h-full opacity-5">
      <div class="absolute top-16 left-16 w-8 h-8 bg-primary-600 rounded-full"></div>
      <div class="absolute top-32 right-24 w-4 h-4 bg-primary-600 rounded-full"></div>
      <div class="absolute bottom-20 left-1/3 w-6 h-6 bg-primary-600 rounded-full"></div>
      <div class="absolute bottom-32 right-16 w-12 h-12 bg-primary-600 rounded-full"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <div class="w-16 h-1 bg-primary-600 mb-8"></div>
        <h1 class="text-5xl md:text-6xl font-heading font-bold text-secondary-900 mb-8 leading-tight">
          ติดต่อเรา
        </h1>
        <p class="text-xl text-secondary-700 font-sans leading-relaxed mb-8">
          เริ่มต้นจุดใหม่ของความสำเร็จ<br>
          ปรึกษาฟรี เรียบง่าย ได้ผลจริง
        </p>
        
        <div class="flex items-center">
          <div class="w-3 h-3 bg-primary-600 rounded-full mr-4"></div>
          <div class="w-2 h-2 bg-primary-600 rounded-full mr-4 opacity-60"></div>
          <div class="w-2 h-2 bg-primary-600 rounded-full opacity-30"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form & Info -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        
        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-heading font-bold text-gray-900 mb-8">
            ส่งข้อความหาเรา
          </h2>
          
          <form class="space-y-6" id="contact-form">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                  ชื่อ *
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="กรอกชื่อของคุณ"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                  นามสกุล *
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="กรอกนามสกุลของคุณ"
                />
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                อีเมล *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="your.email@example.com"
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                เบอร์โทรศัพท์
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="08X-XXX-XXXX"
              />
            </div>
            
            <div>
              <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
                บริษัท/องค์กร
              </label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="ชื่อบริษัท (ถ้ามี)"
              />
            </div>
            
            <div>
              <label for="service" class="block text-sm font-medium text-gray-700 mb-2">
                บริการที่สนใจ *
              </label>
              <select
                id="service"
                name="service"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">เลือกบริการ</option>
                <option value="sales-page">Sales Page Design</option>
                <option value="seo">SEO Optimization</option>
                <option value="content">Content Marketing</option>
                <option value="consulting">Digital Consulting</option>
                <option value="package">แพ็กเกจรวม</option>
                <option value="other">อื่นๆ</option>
              </select>
            </div>
            
            <div>
              <label for="budget" class="block text-sm font-medium text-gray-700 mb-2">
                งบประมาณ
              </label>
              <select
                id="budget"
                name="budget"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">เลือกช่วงงบประมาณ</option>
                <option value="under-25k">ต่ำกว่า 25,000 บาท</option>
                <option value="25k-50k">25,000 - 50,000 บาท</option>
                <option value="50k-100k">50,000 - 100,000 บาท</option>
                <option value="100k-200k">100,000 - 200,000 บาท</option>
                <option value="over-200k">มากกว่า 200,000 บาท</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                รายละเอียดโปรเจกต์ *
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="อธิบายรายละเอียดโปรเจกต์ของคุณ เป้าหมาย และสิ่งที่คาดหวัง..."
              ></textarea>
            </div>
            
            <button
              type="submit"
              class="w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white py-4 px-6 rounded-lg font-semibold text-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
            >
              ส่งข้อความ
            </button>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div>
          <h2 class="text-3xl font-heading font-bold text-gray-900 mb-8">
            ข้อมูลติดต่อ
          </h2>
          
          <div class="space-y-8">
            <!-- Office Info -->
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-6">
              <h3 class="text-xl font-heading font-semibold text-gray-900 mb-4">
                สำนักงาน
              </h3>
              <div class="space-y-4">
                <div class="flex items-start">
                  <svg class="w-6 h-6 text-blue-600 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <div>
                    <p class="font-medium text-gray-900">ที่อยู่</p>
                    <p class="text-gray-600">123/45 ถนนสุขุมวิท แขวงคลองตัน<br>เขตวัฒนา กรุงเทพมหานคร 10110</p>
                  </div>
                </div>
                
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <div>
                    <p class="font-medium text-gray-900">โทรศัพท์</p>
                    <a href="tel:+66812345678" class="text-blue-600 hover:text-blue-700">+66 81-234-5678</a>
                  </div>
                </div>
                
                <div class="flex items-center">
                  <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <div>
                    <p class="font-medium text-gray-900">อีเมล</p>
                    <a href="mailto:hello@salespagepro.com" class="text-blue-600 hover:text-blue-700">hello@salespagepro.com</a>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Working Hours -->
            <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-6">
              <h3 class="text-xl font-heading font-semibold text-gray-900 mb-4">
                เวลาทำการ
              </h3>
              <div class="space-y-2">
                <div class="flex justify-between">
                  <span class="text-gray-700">จันทร์ - ศุกร์</span>
                  <span class="font-medium text-gray-900">9:00 - 18:00</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-700">เสาร์</span>
                  <span class="font-medium text-gray-900">9:00 - 15:00</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-700">อาทิตย์</span>
                  <span class="font-medium text-gray-900">ปิด</span>
                </div>
              </div>
            </div>
            
            <!-- Social Media -->
            <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl p-6">
              <h3 class="text-xl font-heading font-semibold text-gray-900 mb-4">
                ติดตามเรา
              </h3>
              <div class="flex space-x-4">
                <a href="#" class="w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center hover:bg-blue-700 transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                  </svg>
                </a>
                <a href="#" class="w-12 h-12 bg-green-600 text-white rounded-full flex items-center justify-center hover:bg-green-700 transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19.365 9.863c.349 0 .63.285.63.631 0 .345-.281.63-.63.63H17.61v1.125h1.755c.349 0 .63.283.63.63 0 .344-.281.629-.63.629h-2.386c-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.627-.63h2.386c.349 0 .63.285.63.63 0 .349-.281.63-.63.63H17.61v1.125h1.755zm-3.855 3.016c0 .27-.174.51-.432.596-.064.021-.133.031-.199.031-.211 0-.391-.09-.51-.25l-2.443-3.317v2.94c0 .344-.279.629-.631.629-.346 0-.626-.285-.626-.629V8.108c0-.27.173-.51.43-.595.06-.023.136-.033.194-.033.195 0 .375.104.495.254l2.462 3.33V8.108c0-.345.282-.63.63-.63.345 0 .63.285.63.63v4.771zm-5.741 0c0 .344-.282.629-.631.629-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.627-.63.349 0 .631.285.631.63v4.771zm-2.466.629H4.917c-.345 0-.63-.285-.63-.629V8.108c0-.345.285-.63.63-.63.348 0 .63.285.63.63v4.141h1.756c.348 0 .629.283.629.63 0 .344-.282.628-.629.628M24 10.314C24 4.943 18.615.572 12 .572S0 4.943 0 10.314c0 4.811 4.27 8.842 10.035 9.608.391.082.923.258 1.058.59.12.301.079.766.038 1.08l-.164 1.02c-.045.301-.24 1.186 1.049.645 1.291-.539 6.916-4.070 9.436-6.975C23.176 14.393 24 12.458 24 10.314"/>
                  </svg>
                </a>
                <a href="#" class="w-12 h-12 bg-pink-600 text-white rounded-full flex items-center justify-center hover:bg-pink-700 transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M12.017 0C8.396 0 7.989.013 7.041.072 6.094.131 5.458.333 4.898.63c-.58.311-1.08.66-1.474 1.056-.395.395-.744.894-1.056 1.474-.297.56-.499 1.196-.558 2.143-.059.948-.072 1.355-.072 4.976v.448c0 3.621.013 4.028.072 4.976.059.947.261 1.583.558 2.143.311.58.661 1.079 1.056 1.474.395.394.894.743 1.474 1.056.56.296 1.196.499 2.143.558.948.059 1.355.072 4.976.072h.448c3.621 0 4.028-.013 4.976-.072.947-.059 1.583-.262 2.143-.558.58-.313 1.079-.662 1.474-1.056.394-.395.743-.894 1.056-1.474.296-.56.499-1.196.558-2.143.059-.948.072-1.355.072-4.976v-.448c0-3.621-.013-4.028-.072-4.976-.059-.947-.262-1.583-.558-2.143-.313-.58-.662-1.079-1.056-1.474C20.11 1.347 19.611.998 19.031.687c-.56-.297-1.196-.499-2.143-.558C15.94.013 15.533 0 11.912 0h.105zm-.105 1.077c3.637 0 4.065.01 5.005.07.908.042 1.402.194 1.732.322.436.169.744.373 1.071.7.326.326.531.635.7 1.071.128.33.28.824.322 1.732.06.94.07 1.368.07 5.005 0 3.637-.01 4.065-.07 5.005-.042.908-.194 1.402-.322 1.732-.169.436-.374.744-.7 1.071-.327.326-.635.531-1.071.7-.33.128-.824.28-1.732.322-.94.06-1.368.07-5.005.07-3.637 0-4.065-.01-5.005-.07-.908-.042-1.402-.194-1.732-.322-.436-.169-.744-.374-1.071-.7-.326-.327-.531-.635-.7-1.071-.128-.33-.28-.824-.322-1.732-.06-.94-.07-1.368-.07-5.005 0-3.637.01-4.065.07-5.005.042-.908.194-1.402.322-1.732.169-.436.374-.744.7-1.071.327-.326.635-.531 1.071-.7.33-.128.824-.28 1.732-.322.94-.06 1.368-.07 5.005-.07z" clip-rule="evenodd" />
                    <path fill-rule="evenodd" d="M12 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section (Optional) -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-heading font-bold text-gray-900 mb-4">
          แผนที่ตำแหน่งสำนักงาน
        </h2>
        <p class="text-gray-600">
          สะดวกเดินทางด้วยระบบขนส่งมวลชนและที่จอดรถเพียงพอ
        </p>
      </div>
      
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="h-96 bg-gray-200 flex items-center justify-center">
          <div class="text-center">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <p class="text-gray-500">แผนที่จะแสดงที่นี่</p>
            <p class="text-sm text-gray-400 mt-2">
              (ใช้ Google Maps API หรือ แผนที่ที่ต้องการ)
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form');
    
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // รวบรวมข้อมูลจากฟอร์ม
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);
        
        // จำลองการส่งข้อมูล
        console.log('Form submitted:', data);
        
        // แสดงข้อความขอบคุณ
        alert('ขอบคุณสำหรับข้อความของคุณ! เราจะติดต่อกลับภายใน 24 ชั่วโมง');
        
        // รีเซ็ตฟอร์ม
        form.reset();
        
        // ในการใช้งานจริง คุณจะส่งข้อมูลไปยัง server
        // หรือใช้บริการเช่น Netlify Forms, Formspree เป็นต้น
      });
    }
    
    // ตรวจสอบ URL parameters สำหรับการเลือกบริการอัตโนมัติ
    const urlParams = new URLSearchParams(window.location.search);
    const service = urlParams.get('service');
    
    if (service) {
      const serviceSelect = document.getElementById('service');
      if (serviceSelect) {
        serviceSelect.value = service;
      }
    }
  });
</script>
