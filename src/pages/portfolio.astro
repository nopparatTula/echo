              <div class="absolute inset-0">
                <div class="absolute top-4 left-4 w-16 h-16 bg-primary-600 rounded-full opacity-10"></div>
                <div class="absolute bottom-4 right-4 w-8 h-8 bg-primary-600 rounded-full opacity-20"></div>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
                  <div class="w-20 h-20 bg-primary-600 rounded-full flex items-center justify-center opacity-80">
                    <div class="w-8 h-8 bg-white rounded-full"></div>
                  </div>
                </div>
              </div>
              
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="text-center">
                  <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-3">
                    <div class="w-6 h-6 bg-white rounded-full"></div>
                  </div>
                  <p class="text-sm text-secondary-600 font-sans">Project Preview</p>
                </div>
              </div>
              
              <!-- Overlay -->
              <div class="absolute inset-0 bg-primary-600 bg-opacity-0 group-hover:bg-opacity-95 transition-all duration-500 flex items-center justify-center">
                <div class="text-center opacity-0 group-hover:opacity-100 transition-opacity duration-500 transform translate-y-4 group-hover:translate-y-0">
                  <button class="bg-white text-primary-600 px-8 py-3 rounded-full font-semibold font-heading hover:shadow-lg transition-all duration-300">
                    ดูรายละเอียด
                  </button>
                </div>
              </div>
            </div>
            
            <div class="p-8">
              <!-- Category & Year -->
              <div class="flex items-center justify-between mb-4">
                <span class="px-4 py-2 text-sm font-medium bg-primary-100 text-primary-700 rounded-full font-sans">
                  {item.category}
                </span>
                <span class="text-sm text-secondary-500 font-sans">{item.year}</span>
              </div>
              
              <!-- Title -->
              <h3 class="text-2xl font-heading font-bold text-secondary-900 mb-4 leading-tight">
                {item.title}
              </h3>
              
              <!-- Description -->
              <p class="text-secondary-700 mb-6 line-clamp-3 font-sans leading-relaxed">
                {item.description}
              </p>
              
              <!-- Results -->
              <div class="grid grid-cols-3 gap-4 mb-6">
                {Object.entries(item.results).map(([key, value]) => (
                  <div class="text-center p-3 bg-primary-50 rounded-2xl">
                    <div class="text-xl font-bold text-primary-600 font-heading">{value}</div>
                    <div class="text-xs text-secondary-600 capitalize font-sans">{key}</div>
                  </div>
                ))}
              </div>
              
              <!-- Tags -->
              <div class="flex flex-wrap gap-2 mb-6">
                {item.tags.slice(0, 3).map((tag) => (
                  <span class="text-xs px-3 py-2 bg-secondary-100 text-secondary-700 rounded-full font-sans">
                    {tag}
                  </span>
                ))}
              </div>
              
              <!-- Client -->
              <div class="flex items-center justify-between pt-4 border-t border-secondary-100">
                <span class="text-sm text-secondary-600 font-sans">
                  <span class="font-medium">Client:</span> {item.client}
                </span>
                <a 
                  href={item.link} 
                  class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium text-sm transition-colors font-sans"
                >
                  ดูเพิ่มเติม
